@article{lilly_gas_2013,
	title = {Gas {Regulation} of {Galaxies}: {The} {Evolution} of the {Cosmic} {Specific} {Star} {Formation} {Rate}, the {Metallicity}-{Mass}-{Star}-formation {Rate} {Relation}, and the {Stellar} {Content} of {Halos}},
