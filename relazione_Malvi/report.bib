	pages = {1001--1018},
	file = {Bouché et al. - 2010 - THE IMPACT OF COLD GAS ACCRETION ABOVE A MASS FLOO.pdf:/home/malvi/Zotero/storage/L87N42PG/Bouché et al. - 2010 - THE IMPACT OF COLD GAS ACCRETION ABOVE A MASS FLOO.pdf:application/pdf},
