	keywords = {Cosmology: theory, Galaxies: evolution, Galaxies: formation, Method: numerical},
	pages = {72--89},
	file = {Accepted Version:/home/malvi/Zotero/storage/26Y2IWFJ/McAlpine et al. - 2016 - The eagle simulations of galaxy formation Public .pdf:application/pdf;ScienceDirect Snapshot:/home/malvi/Zotero/storage/52JHYNYL/S2213133716300130.html:text/html},
