	author = {Kauffmann, Guinevere and Heckman, Timothy M. and Tremonti, Christy and Brinchmann, Jarle and Charlot, Stéphane and White, Simon D. M. and Ridgway, Susan E. and Brinkmann, Jon and Fukugita, Masataka and Hall, Patrick B. and Ivezić, Željko and Richards, Gordon T. and Schneider, Donald P.},
